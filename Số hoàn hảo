#include <stdio.h>
#include <math.h>
int main()
{
	int n;
	scanf("%d", &n);
	int sum=0;
	for(int i=1;i<n;i++)
	{
		if(n%i==0)
		{
			sum+= i;
			
		}
	}
	if(sum == n )
		{
			printf("1");
		}else 
		{
			printf("0");
		}
	return 0;
}


//WHILE
#include <stdio.h>
#include <math.h>
int main()
{
	int n;
	scanf("%d", &n);
	int sum=0;
	int i=1;
	while(i<n){
		if(n%i==0)
		{
			sum+= i;
		}
		i++;
	}
	if(sum == n )
		{
			printf("1");
		}else 
		{
			printf("0");
		}
	return 0;
}

//DO WHILE
#include <stdio.h>
#include <math.h>
int main()
{
	int n;
	scanf("%d", &n);
	int sum=0;
	int i=1;
	do{
		if(n%i==0)
		{
			sum+= i;
		}
		i++;
	}while(i<n);
	if(sum == n )
		{
			printf("1");
		}else 
		{
			printf("0");
		}
	return 0;
}
