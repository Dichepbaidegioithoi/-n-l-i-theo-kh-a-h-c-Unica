#include <stdio.h>
#include <math.h>
int main()
{
	int So_luong;
	scanf("%d", &So_luong);
	double Don_gia;
	scanf("%lf", &Don_gia);
	double Giam_gia = So_luong * Don_gia *12/100;
	printf("%.5lf\n",Giam_gia);
	double Cuoc_van_chuyen = So_luong * Don_gia *5/100;
	printf("%.5lf\n",Cuoc_van_chuyen);
	double So_tien_phai_tra = So_luong * Don_gia - Giam_gia + Cuoc_van_chuyen;
	printf("%.5lf",So_tien_phai_tra);
	return 0;
}
